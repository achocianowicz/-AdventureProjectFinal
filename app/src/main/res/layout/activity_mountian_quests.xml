<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MountianQuests">

    <Button
        android:id="@+id/mountianQuest1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mountianQuest2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="@+id/ForestQuest2Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ForestQuest2Text"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/ForestQuest1Text"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Fight Level 1 Goat"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/forestQuest1Button"
        app:layout_constraintEnd_toStartOf="@+id/forestQuest1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forestQuest1Button" />

    <TextView
        android:id="@+id/ForestQuest2Text"
        android:layout_width="239dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="Find the Chest"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/ForestQuest1Text"
        app:layout_constraintStart_toStartOf="@+id/ForestQuest1Text"
        app:layout_constraintTop_toBottomOf="@+id/ForestQuest1Text" />

</android.support.constraint.ConstraintLayout>